<style>
  .navigation {
    background-color: #1a3a4d;
    border-bottom: 3px solid #4a90a4;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .nav-menu {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 0;
  }

  .nav-menu li {
    margin: 0;
  }

  .nav-link {
    display: block;
    padding: 1rem 1.5rem;
    color: white;
    text-decoration: none;
    font-weight: 500;
    transition: background-color 0.3s ease, color 0.3s ease;
    border-bottom: 3px solid transparent;
  }

  .nav-link:hover {
    background-color: rgba(74, 144, 164, 0.3);
    border-bottom-color: #4a90a4;
  }

  .nav-link.active {
    background-color: rgba(74, 144, 164, 0.5);
    border-bottom-color: #4a90a4;
  }

  .donate-link {
    background-color: #d97706;
    margin-left: auto;
  }

  .donate-link:hover {
    background-color: #b45309;
    border-bottom-color: #f59e0b;
  }

  @media (max-width: 768px) {
    .nav-menu {
      flex-wrap: wrap;
      justify-content: center;
    }

    .nav-link {
      padding: 0.75rem 1rem;
      font-size: 0.9rem;
    }

    .donate-link {
      margin-left: 0;
    }
  }
</style>